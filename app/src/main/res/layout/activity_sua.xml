<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuaActivity">
    <ImageView
        android:id="@+id/image"
        android:layout_margin="20dp"
        android:src="@drawable/ic_cemera"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <EditText
        android:id="@+id/ed_tenMon"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/image"
        android:hint="nhập tên món"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:visibility="visible"
        android:id="@+id/spinner"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/ed_tenMon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/ed_mota"
        android:hint="thong tin mon ăn"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>
    <Button
        android:id="@+id/but"
        android:layout_marginLeft="50dp"
        android:background="#EC0505"
        android:text="Xóa"
        android:layout_below="@+id/ed_mota"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/but1"
        android:layout_marginLeft="150dp"
        android:background="#EC0505"
        android:text="sửa"
        android:layout_toRightOf="@id/but"
        android:layout_below="@+id/ed_mota"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>